---
interface Props {
	label: string;
	href: string;
}

const { label, href } = Astro.props;
const isActive = Astro.url.pathname.startsWith(href);
---

<a
	{href}
	class:list={[
		"flex items-center px-3 py-1 rounded-full",
		{ "hover:bg-stone-800": !isActive },
		{ "text-primary-500 bg-primary-600 bg-opacity-20": isActive },
	]}
>
	{label}
</a>
